{
  "manifest_version": 3,
  "name": "QC - Airline Ticketing Quality Check",
  "version": "1.0",
  "description": "A simple sidebar checklist for quality checking airline ticketing tasks.",
  "permissions": [
    "sidePanel"
  ],
  "action": {
    "default_title": "Open QC Checklist",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
